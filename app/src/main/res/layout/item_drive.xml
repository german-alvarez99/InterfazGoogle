<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageTipo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/papelera"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/txtnombreArchivo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Nombre del archivo"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_opciones"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageContenido"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center_vertical|center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:src="@mipmap/ic_perfil"/>
            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Los abriste hoy"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gris"
        android:layout_marginTop="2dp"/>
</LinearLayout>